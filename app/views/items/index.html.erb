<h1>宣伝一覧</h1>


  <ul>

    <% @items.each do |item| %>
      <li>
    <div><%= link_to item.body, item %></div>
    <div><%= link_to item.retweeted_count, item %></div>
    <div><%= link_to item.user.name_twitter, "/users/" + item.user_id.to_s %></div>
    <div><%= link_to "宣伝する", item %></div>
    <% if current_user && item.user_id = current_user.id %>
    <div><%= link_to 'Edit', edit_item_path(item) %></div>
    <div><%= link_to 'Destroy', item, confirm: 'Are you sure?', method: :delete %></div>
  <% end %>
</li>
<% end %>

</ul>

<br />
<% if current_user %>
  <%= link_to '宣伝を登録する', new_item_path %>
<% end %>
